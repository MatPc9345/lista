                <font>font13</font>
                <label>https://t.me/esempio</label>
                <textcolor>white</textcolor>
                <align>center</align>
            </control>
        </control>

        <!-- Riga verticale centrale -->
        <control type="image">
            <left>960</left>
            <top>0</top>
            <width>1</width>
            <height>1080</height>
            <texture colordiffuse="33FFFFFF">white.png</texture>
        </control>
    </controls>
</window>